<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_interview"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary" />

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/job_interview_prep"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- Job Category Selection -->
        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_interview_questions"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/job_category_card_1"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_code"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/chart_blue" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/software_engineer"
                        android:textSize="12sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/job_category_card_2"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_analytics"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/chart_green" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_analyst"
                        android:textSize="12sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/job_category_card_3"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_product"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/chart_orange" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_manager"
                        android:textSize="12sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/job_category_card_4"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_marketing"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/chart_purple" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/marketing"
                        android:textSize="12sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Question Display -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_help"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/primary" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interview Question"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/question_text"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tell me about yourself and your experience in software development."
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:background="@color/background_light"
                    android:padding="16dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recording Section -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mic"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/primary" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/record_your_answers"
                        android:textSize="18sp" />

                    <!-- Recording Indicator -->
                    <ImageView
                        android:id="@+id/recording_indicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_radio_button_checked"
                        android:visibility="gone"
                        app:tint="@color/error" />

                </LinearLayout>

                <!-- Recording Status -->
                <TextView
                    android:id="@+id/recording_status_text"
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready to record"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <!-- Voice Level Progress -->
                <ProgressBar
                    android:id="@+id/recording_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:progressTint="@color/success"
                    android:max="100" />

                <!-- Recording Button -->
                <Button
                    android:id="@+id/start_recording_button"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🎤 Start Recording"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- User Answer Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/user_answer_card"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/chart_blue" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Answer"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/user_answer_text"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:background="@color/background_light"
                    android:padding="16dp"
                    android:textColor="@color/chart_blue" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- AI Feedback Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/feedback_card"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_smart_toy"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Analysis Results"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/SubtitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced interview coaching feedback"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <TextView
                        style="@style/SubtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🤖 Llama 2 AI"
                        android:textSize="11sp"
                        android:textColor="@color/success"
                        android:background="@drawable/pill_background"
                        android:backgroundTint="@color/success_light"
                        android:padding="8dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Scrollable Feedback Content -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="400dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/feedback_text"
                        style="@style/BodyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/background_light"
                        android:padding="20dp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true" />

                </ScrollView>

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📊 Detailed scoring and grammar analysis included"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="start"
                        android:drawablePadding="4dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_help"
                        android:layout_marginStart="8dp"
                        app:tint="@color/primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Session Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Progress"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/session_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:progressTint="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/session_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Progress: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/questions_answered_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Questions Answered: 0/3"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Session Analysis Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/session_analysis_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Analysis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:drawableStart="@drawable/ic_analytics"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/overall_score_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Score: 0.0/100"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_color"
                    android:gravity="center"
                    android:background="@drawable/score_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/view_analysis_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="View Detailed Analysis"
                    android:textColor="@color/white"
                    android:background="@drawable/button_secondary_background"
                    android:drawableStart="@drawable/ic_analytics"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Next Question Button -->
        <Button
            android:id="@+id/next_question_button"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next Question"
            android:visibility="gone"
            android:layout_marginBottom="32dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="8dp" />

    </LinearLayout>

</ScrollView> 